<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DinnerHalp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorKnockout</item>
        <!-- Secondary brand color. -->
<!--        <item name="colorSecondary">@color/teal_200</item>-->
<!--        <item name="colorSecondaryVariant">@color/teal_700</item>-->
<!--        <item name="colorOnSecondary">@color/black</item>-->
        <!-- Status bar color. -->
        <!-- item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item -->
        <!-- Customize your theme here. -->
        <item name="android:alertDialogTheme">@style/CustomAlertDialogTheme</item>
    </style>

    <style name="Theme.DinnerHalp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DinnerHalp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/colorDefaultText</item>
        <item name="backgroundColor">@color/colorDefaultText</item>
    </style>

    <style name="Theme.DinnerHalp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
<!--        <item name="android:background">@color/colorPrimaryDark</item>-->
    </style>

    <style name="Theme.DinnerHalp.CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicator">@color/colorAccent</item>
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabSelectedTextColor">@color/colorKnockout</item>
        <item name="tabTextColor">@color/colorUnselectedText</item>
    </style>

</resources>